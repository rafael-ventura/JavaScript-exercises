//function to transform Fahrenheit in Celsius; 
function temp_to_c(f){
	var c;
	c = ((f-32)/9)*5;
	return c;
}


//function to transform Celsius in Fahrenheit;
function temp_to_f(c){
	var f; 
	f =  (c/5)*9 + 32;
	return f;
}


//Function which do the two conversions ( f to c and c to f);
function temp(value,type){
	if(type == "c"){
		var f = (value/5)*9 + 32;
		return f;
	} else{
	var c = ((value-32)/9)*5;
	return c;	
	}	
}
